apiVersion: v1
kind: Pod
metadata:
  name: "${name}-tester"
  labels:
    app.kubernetes.io/name: "${name}"
  annotations:
    marketplace.cloud.google.com/verification: test
spec:
  containers:
  - name: tester
    image: "${imageTester}"
    volumeMounts:
    - name: config-volume
      mountPath: /tester
    command: ["bash"]
    args: ["/tester/run.sh"]
  restartPolicy: Never
  volumes:
  - name: config-volume
    configMap:
      name: "${name}-test"
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: "${name}-test"
  labels:
    app.kubernetes.io/name: "${name}"
  annotations:
    marketplace.cloud.google.com/verification: test
data:
  run.sh: |-
    set -x
    endpoint="http://${name}-kong-ce-proxy-svc"
    expected=404
    echo GET $endpoint
    http_status_code=$(curl -o /dev/null -s -w "%{http_code}\n" $endpoint)
    echo "Expected proxy http status code: $expected"
    echo "Actual proxy http status code: $http_status_code"
    if [[ "$http_status_code" == "$expected" ]]; then
      echo SUCCESS
    else
      echo FAILURE
      exit 1
    fi
    endpoint="http://${name}-kong-ce-admin-svc:8001"
    expected=200
    echo GET $endpoint
    http_status_code=$(curl -o /dev/null -s -w "%{http_code}\n" $endpoint)
    echo "Expected admin http status code: $expected"
    echo "Actual admin http status code: $http_status_code"
    if [[ "$http_status_code" == "$expected" ]]; then
      echo SUCCESS
    else
      echo FAILURE
      exit 1
    fi
